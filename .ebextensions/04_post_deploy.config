files:
  "/opt/elasticbeanstalk/hooks/appdeploy/post/01_configure_debugging.sh":
    mode: "000755"
    owner: root
    group: root
    content: |
      #!/bin/bash
      set -x
      echo "Starting post-deployment debugging..."
      echo "Current directory: $(pwd)"
      echo "Listing files in current directory:"
      ls -la
      echo "Listing files in /var/app/current:"
      ls -la /var/app/current
      echo "Python version:"
      python --version
      echo "Pip version:"
      pip --version
      echo "Virtual environment:"
      ls -la /var/app/venv/*/bin/
      echo "End of debugging information" 