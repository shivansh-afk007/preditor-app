files:
  "/opt/elasticbeanstalk/config/private/logging.conf":
    mode: "000644"
    owner: root
    group: root
    content: |
      [formatters]
      keys: standard

      [handlers]
      keys: console

      [formatter_standard]
      format: %(asctime)s [%(levelname)s] %(name)s: %(message)s

      [handler_console]
      class: StreamHandler
      formatter: standard
      stream: ext://sys.stdout
      level: INFO

      [loggers]
      keys: root,application

      [logger_root]
      level: INFO
      handlers: console
      qualname: root

      [logger_application]
      level: INFO
      handlers: console
      qualname: application
      propagate: 0

option_settings:
  aws:elasticbeanstalk:cloudwatch:logs:
    StreamLogs: true
    DeleteOnTerminate: true
    RetentionInDays: 7
  aws:elasticbeanstalk:cloudwatch:logs:health:
    HealthStreamingEnabled: true
    DeleteOnTerminate: true
    RetentionInDays: 7 